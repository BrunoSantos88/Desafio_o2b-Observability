agent {
        docker {
            // Specify the Docker image to use
            image 'your-docker-image:tag'
            // Specify additional options if needed
            args '-v /your/host/path:/container/path'
        }
    }
    
    stages {
        stage('Build') {
            steps {
                sh 'docker exec container_id your_build_command'
            }
        }
        
        stage('Test') {
            steps {
                // Your test steps here
                sh 'docker exec container_id your_test_command'
            }
        }
    }
